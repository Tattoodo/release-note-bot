{
  "name": "release-note-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^17.1.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "prettier": "^1.19.1",
    "serverless": "^1.66.0"
  },
  "engines": {
    "node": "^12"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "prettier": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/Tattoodo/release-note-bot"
  },
  "scripts": {
    "build": "prettier --write *.js && yarn lint",
    "deploy": "yarn build && serverless deploy",
    "lint": "eslint *.js",
    "logs": "serverless logs -f webhook -t"
  }
}
